{
  "name": "sidewindow",
  "publisher": "alextobiasdev",
  "displayName": "SideWindow",
  "description": "SideWindow: view & edit your files from another device",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:sidewindow.connectAndShare",
    "onCommand:sidewindow.startConnection",
    "onCommand:sidewindow.sendMessage",
    "onCommand:sidewindow.shareFile",
    "onCommand:sidewindow.disconnect",
    "onCommand:sidewindow.showRoomCode",
    "onCommand:sidewindow.openClientInBrowser"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sidewindowViewContainer",
          "title": "SideWindow",
          "icon": "$(mirror-public)"
        }
      ]
    },
    "views": {
      "sidewindowViewContainer": [
        {
          "id": "sidewindowStartView",
          "name": "sidewindow - Start Here (Name)",
          "icon": "$(broadcast)",
          "contextualTitle": "sidewindow - Start (Contextual Title)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "sidewindowStartView",
        "contents": "Welcome to SideWindow!\nOpen up a file you'd like to share, and click the button below!\n[Share Current File](command:sidewindow.connectAndShare)\nOnce you're connected, use the [SideWindow Client](https://sidewindow.herokuapp.com) on another device to view and edit!\n[Open Browser Client](command:sidewindow.openClientInBrowser)\nUse the following button to disconnect:\n[Disconnect](command:sidewindow.disconnect)"
      }
    ],
    "commands": [
      {
        "command": "sidewindow.connectAndShare",
        "title": "sidewindow - Connect and Share"
      },
      {
        "command": "sidewindow.disconnect",
        "title": "sidewindow - Disconnect from server"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run -S esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run -S esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run -S esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "esbuild": "^0.12.4",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "socket.io-client": "^4.1.1",
    "utf-8-validate": "^5.0.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/vscode-wordcount.githttps://github.com/alextobias/sidewindow-extension.git"
  }
}
